<div class="twt-container">

  <div class="twt-header">
    <span>TWEETS</span>

    <%= link_to new_tweet_path do %>
      <span class="twt-btn">
        New Tweet
      </span>
    <% end %>
  </div>

  <div class="">
    <% @tweets.each do |tweet| %>
    <div class="twt-content">
      <span>
        <i><%= time_ago_in_words(tweet.created_at) %></i>
      </span>
      <p>
        <%= tweet.body %>
        <a><strong>@<%= tweet.user.name %></strong> </a>

      </p>
    </div>

    <% end %>
  </div>
  <div>
  <% if user_signed_in?  %>
  <% current_user.email %>
    <a><%= link_to 'Log out', destroy_user_session_path, method: :delete, style: "color: black;" %></a>

  <% end %>
  </div>
  <div>
    <a><%=link_to "Update password", edit_user_registration_path%></a>
  </div>
</div>
